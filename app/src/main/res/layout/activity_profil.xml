<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:background="@drawable/bg"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".profil">

<!--    <ImageView-->
<!--        android:id="@+id/logo_pro"-->
<!--        android:layout_width="match_parent"-->
<!--        android:layout_height="94dp"-->
<!--        app:srcCompat="@drawable/profile" />-->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="About Author"
        android:layout_marginTop="30dp"
        android:fontFamily="@font/audrey"
        android:layout_gravity="center"
        android:textColor="#CDDC39"
        android:textStyle="bold"
        android:textSize="24dp"/>

    <ImageView
        android:id="@+id/dp"
        android:layout_width="342dp"
        android:layout_height="211dp"
        android:layout_gravity="center"
        android:layout_marginTop="10dp"
        android:src="@drawable/dpp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Muhammad Siddiq Liza Kailani"
        android:layout_gravity="center"
        android:textSize="25sp"
        android:fontFamily="@font/tekton"
        android:textColor="#FF7043"/>

    <TextView
        android:layout_width="78dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:textAlignment="center"
        android:text="a.k.a Kai"
        android:fontFamily="@font/tekton"
        android:textColor="#FF7043"
        android:textSize="18sp"
        android:textStyle="italic" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="09031381722132"
        android:layout_gravity="center"
        android:textSize="18sp"
        android:fontFamily="@font/audrey"
        android:textColor="#FF7043"/>

    <TextView
        android:id="@+id/bio"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Indralaya, 15 Oktober 1999\nSDN 5 Indralaya \nMTsN Sakatiga \nMAN 1 Ogan Ilir"
        android:textSize="15dp"
        android:textAlignment="center"
        android:layout_margin="50dp"
        android:fontFamily="@font/tekton"
        android:textColor="#FF7043"
        android:layout_gravity="center"/>

    <TextView
        android:id="@+id/kata"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Quotes:"
        android:layout_marginRight="65dp"
        android:fontFamily="@font/poppins"
        android:textColor="#FF7043"
        android:layout_gravity="center"
        android:layout_below="@id/bio"/>

    <TextView
        android:id="@+id/quote"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="JANGAN LUPA BERNAFAS :)\n \nKai - 2019"
        android:textStyle="italic"
        android:textAlignment="center"
        android:fontFamily="@font/tekton"
        android:textColor="#FF7043"
        android:layout_gravity="center"
        android:layout_below="@id/bio"/>

    <Button
        android:id="@+id/home"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="30dp"
        android:fontFamily="@font/tekton"
        android:textColor="#F1B605"
        android:backgroundTint="#ffff"
        android:onClick="MainActivity"
        android:layout_below="@+id/quote"
        android:text="kembali" />

</LinearLayout>