    <Button
        android:id="@+id/baca"
        android:layout_width="225dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:textColor="#F1B605"
        android:backgroundTint="#ffff"
        android:layout_centerInParent="true"
        android:text="Teknologi"
        android:fontFamily="@font/poppins"
        android:textAllCaps="false"
        android:onClick="berita" />

    <Button
        android:id="@+id/kesehatan"
        android:layout_width="225dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_below="@id/baca"
        android:textColor="#F1B605"
        android:fontFamily="@font/poppins"
        android:textAllCaps="false"
        android:backgroundTint="#ffff"
        android:layout_centerInParent="true"
        android:text="Kesehatan"
        android:onClick="kesehatan" />

    <Button
        android:id="@+id/enter"
        android:layout_width="225dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_below="@id/kesehatan"
        android:textColor="#F1B605"
        android:fontFamily="@font/poppins"
        android:textAllCaps="false"
        android:backgroundTint="#ffff"
        android:layout_centerInParent="true"
        android:text="Entertainment"
        android:onClick="enter"/>

    <Button
        android:id="@+id/science"
        android:layout_width="225dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_below="@id/enter"
        android:textColor="#F1B605"
        android:backgroundTint="#ffff"
        android:layout_centerInParent="true"
        android:text="Science"
        android:fontFamily="@font/poppins"
        android:textAllCaps="false"
        android:onClick="science"/>

    <Button
        android:id="@+id/olahraga"
        android:layout_width="225dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_above="@id/baca"
        android:textColor="#F1B605"
        android:fontFamily="@font/poppins"
        android:textAllCaps="false"
        android:backgroundTint="#ffff"
        android:layout_centerInParent="true"
        android:text="Olahraga"
        android:onClick="olahraga" />

    <Button
        android:id="@+id/headline"
        android:layout_width="225dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:fontFamily="@font/poppins"
        android:textAllCaps="false"
        android:layout_above="@id/olahraga"
        android:textColor="#F1B605"

        android:backgroundTint="#ffff"
        android:layout_centerInParent="true"
        android:text="Top Headline"
        android:onClick="headline" />

    <Button
        android:id="@+id/feedback"
        android:layout_width="225dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_centerInParent="true"
        android:textColor="#F1B605"
        android:backgroundTint="#00FFFFFF"
        android:layout_marginLeft="90dp"
        android:layout_marginBottom="16dp"
        android:layout_above="@id/textView"
        android:text="Feedback About This App"
        android:fontFamily="@font/poppins"
        android:textAllCaps="false"
        android:onClick="kopi"/>

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_gravity="center"
        android:layout_centerInParent="true"
        android:layout_marginBottom="20dp"
