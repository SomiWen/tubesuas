<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/bg"
    tools:context=".MainActivity">

    <ImageView
        android:id="@+id/halo"
        android:layout_width="wrap_content"
        android:layout_height="121dp"
        android:layout_alignParentTop="true"
        android:layout_centerVertical="true"
        android:layout_marginTop="42dp"
        android:layout_marginBottom="16dp"
        app:srcCompat="@drawable/logo" />

    <TextView
        android:id="@+id/welcome_app"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_below="@id/halo"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:text="Kai Tubes"
        android:textAllCaps="true"
        android:fontFamily="@font/audrey"
        android:textColor="#3F51B5"
        android:textSize="30sp" />

    <TextView
        android:id="@+id/pilih_kategori"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@id/headline"
        android:gravity="center"
        android:layout_centerInParent="true"
        android:layout_marginBottom="10dp"
        android:text="Pilih kategori berita"
        android:textColor="#3F51B5"
        android:fontFamily="@font/tekton"
        android:textSize="16sp" />

    <Button
        android:id="@+id/profil"
        android:layout_width="wrap_content"
        android:layout_height="46dp"
        android:layout_above="@id/feedback"
        android:layout_gravity="center"
        android:layout_centerInParent="true"
        android:layout_marginTop="250dp"
        android:layout_marginBottom="1dp"
        android:backgroundTint="#00FFFFFF"
        android:onClick="profil"
        android:fontFamily="@font/poppins"
        android:textAllCaps="false"
        android:text="About Author"
        android:textColor="#F1B605" />

